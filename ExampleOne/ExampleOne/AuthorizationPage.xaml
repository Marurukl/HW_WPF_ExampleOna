<Page x:Class="ExampleOne.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExampleOne"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="AuthorizationPage" Loaded="Page_Loaded">
    <Grid>
        <Label x:Name="loginLabel" Content="Login" HorizontalAlignment="Left" Margin="180,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Height="23" Margin="223,154,0,0" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="signInButton" Content="Sign In" HorizontalAlignment="Left" Margin="180,201,0,0" VerticalAlignment="Top" Width="75" Click="SignInButton_Click"/>
        <Button x:Name="signUpButton" Content="Sign Up" HorizontalAlignment="Left" Margin="268,201,0,0" VerticalAlignment="Top" Width="75" Click="SignUpButton_Click"/>
        <Label x:Name="errorLabel" Content="" HorizontalAlignment="Left" Margin="343,156,0,0" VerticalAlignment="Top" Height="20" Width="81" FontSize="6" Foreground="Red"/>
    </Grid>
</Page>
